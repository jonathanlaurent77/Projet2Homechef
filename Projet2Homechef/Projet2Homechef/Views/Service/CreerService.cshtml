@model Projet2Homechef.Models.Prestation.Service
@{
    ViewBag.Title = "CreerService";
    Layout = "_LayoutHomeChefVuesSecondaires";
}

<h3 class="titre">CreerService (Désactivé)</h3>

<div class="col-lg-8 col-xl-7">
    @using (Html.BeginForm("CreerService","Service",FormMethod.Post, new {enctype="multipart/form-data"}))
     {
        <div class="form-floating mb-3">
            @Html.TextBoxFor(model => model.Titre, new { @class = "form-control", placeholder = "Titre" })
            @Html.LabelFor(model => model.Titre)
            @Html.ValidationMessageFor(model => model.Titre)
        </div>
        <div class="form-floating mb-3">
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
            @Html.LabelFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        @Html.HiddenFor(model=>model.ImagePath)
                    <div class="d-flex flex-row my-3">
                        <div class="mb-3 d-flex">
                            <div>
                                <li>@Html.LabelFor(model => model.Image, new { id = "imageLabel", @style = "text-align:center;" })</li>
                                <li>@Html.TextBoxFor(model => model.Image, new { placeholder = "Description", @type = "file" })</li>

                            </div>
                        </div>
                        <div class="text-center">
                            
                        </div>
                    </div>
                        <!-- Submit Button-->
        <button class="btn btn-primary btn-xl" type="submit">Désactivé</button>
    }
</div>


