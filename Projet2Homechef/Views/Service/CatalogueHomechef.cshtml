
@using Projet2Homechef.Models
@model List<Projet2Homechef.Models.Prestation.Service>

@{
    ViewBag.Title = "CatalogueHomechef";
    
}

<h2><img id ="imgTitre" src="/images/sousmenu catalog.png"  /></h2>
		
		<div class="row justify-content-start">

			@foreach(var service in Model)
			{
				
				
				
				<div class="card col-6 m-5" style="width: 18rem;">
					<div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title">@service.Titre</h5>
                            <div class="my-3">
                               
                            </div>
                            <img src="@service.ImagePath" width="200" height="200" />
                            
                            <p class="card-text">@service.Description</p>
							<p class="card-text">@service.Chef.UserName</p>

                        </div>
						
						<div>
   
							<td> <button1 class="btn btn-success btn-xl" type="submit">@Html.ActionLink("Demander", "Demander", "Service",  new {idService =@service.Id} ) </button1> </td>
                            

                        </div>
                        
						

					</div>
				</div>
			}
			

		</div>

